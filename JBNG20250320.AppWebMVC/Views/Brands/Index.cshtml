@model IEnumerable<JBNG20250320.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h1>Marcas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.BrandId">Editar</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.BrandId">Detalles</a> |
                <a asp-action="Delete" class="btn btn-" asp-route-id="@item.BrandId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
